<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/biskittranslogo"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        app:show_timeout="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exoplayersimpleview"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    <TextView
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#EBEBEB"
        android:text="Biskit Radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#3F3F3F"
        android:text="Now Playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/main_activity_text_view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#3F3F3F"
        android:text="Loading Station..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/main_activity_text_view_artist"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#9E9E9E"
        android:text="Loading Station..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>